# kill process based on a file with its pid.
function kfpid {
    if [ -z "$1" ]; then
        echo "Digite o caminho para o arquivo com o pid."
    else
        kill $(cat $1)
    fi
}

# kill a group of pids based on a query.
function kgpid {
    if [ -z "$1" ]; then
        echo "type the query."
    else
        ps auxww | grep $1 | awk '{print $2}' | xargs kill -9
    fi
}

