# Directories to be prepended to PATH
dirs_to_prepend=(
    "/usr/local/bin"
    "/usr/local/sbin"
)

# Directories to be appended to PATH
dirs_to_append=(
    "/bin"
    "/usr/bin"
    "/sbin"
    "/usr/sbin"
    "$HOME/bin"
    "$HOME/.rvm/bin"
    "$(brew --prefix)/heroku/bin"
    "$(brew --prefix)/git/bin"
    "$(brew --prefix)/share/npm/bin"
    "/Applications/Postgres.app/Contents/Versions/latest/bin"
    "/Applications/MongoDB.app/Contents/Resources/Vendor/mongodb"
    "/Applications/RabbitMQ.app/Contents/Resources/Vendor/rabbitmq/sbin"
    "/Applications/Redis.app/Contents/Resources/Vendor/redis/bin"
    "/usr/textbin"
    "/opt/X11/bin"
)

# Prepend directories to PATH
for index in "${(@k)dirs_to_prepend}"; do
    if [ -d "$index" ]; then
        # If these directories exist, then prepend them to existing PATH
        PATH="$index:$PATH"
    fi
done

# Append directories to PATH
for index in "${(@k)dirs_to_append}"; do
    if [ -d "$index" ]; then
        # If these bins exist, then append them to existing PATH
        PATH="$PATH:$index"
    fi
done

unset dirs_to_prepend dirs_to_append

export PATH
