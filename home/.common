}

function mk_dir_date(){
    echo `date '+%Y-%m-%d'`
    mkdir `date '+%Y-%m-%d'`
}

# kill process based on a file with its pid.
function kill_by_pid {
    if [ -z "$1" ]; then
        echo "type pid path."
    else
        kill $(cat $1)
    fi
}

# kill a group of pids based on a query.
function kill_group {
    if [ -z "$1" ]; then
        echo "type the query."
    else
        ps auxww | grep $1 | awk '{print $2}' | xargs kill -9
    fi
}

