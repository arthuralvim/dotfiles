[user]
    name = Arthur Alvim
    email = afmalvim@gmail.com
    signingkey = 083FDFA462F83160
[core]
    editor = code --wait
    autocrlf = input
    excludesfile = $HOME/.global_gitignore
    pager = cat
[color]
    ui = true
[web]
  browser = google-chrome
[github]
    user = arthuralvim
[merge]
	ff = only
    tool = meld
[commit]
    gpgsign = true
[tag]
    gpgSign = true
[log]
    showSignature = true
[alias]
    c = commit
    call = commit -A :/
    ca = commit --amend
    cm = commit -m
    cam = commit --amend -m
    cnv = commit --no-verify
    d = diff
    dc = diff --cached
    brl = branch -l
    logmr = log --oneline --decorate --all --graph HEAD..origin/master
    logo = log --oneline --decorate --all --graph
    logof = log --oneline --name-only --decorate --all --graph
    logor = log --reverse --oneline --decorate --all
    tree = log --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset" --abbrev-commit
    pushall = push --recurse-submodules=on-demand
    s = status -s
	cb = "!git fetch -p && for branch in $(git for-each-ref --format '%(refname) %(upstream:track)' refs/heads | awk '$2 == \"[gone]\" {sub(\"refs/heads/\", \"\", $1); print $1}'); do git branch -D $branch; done"
[credential]
    helper = !aws codecommit credential-helper $@
    UseHttpPath = true
[pager]
    branch = false
[gpg]
	program = gpg
