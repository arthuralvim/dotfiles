# ansible

alias ag="ansible-galaxy"

function play {
    local check_extra_vars="$(pwd)/extra-vars.yml"
    if [ -f $check_extra_vars ]; then
        ansible-playbook "$@" --extra-vars "@extra-vars.yml"
    else
        ansible-playbook "$@"
    fi
}

function play-ping {
    ansible "$@" -m ping
}

function play-setup {
    ansible "$@" -m setup
}

